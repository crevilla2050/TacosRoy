Public Sub Form_Open()
    Dim sQuery As String
    Dim hResult As Result
  
    hResult = Null
    sQuery = "SELECT * FROM `tbl_formas_pago` where `int_activo` = 1 order by id_forma_pago ASC"
    hResult = modVariables.c_Conn.Exec(sQuery)
    fRecibido = 0
    vBoxFormaPago.Children.Clear
    For Each hResult
        myButtons = New RadioButton(Me) As "PagoRadio"
        myButtons.Font.Size = 10
        myButtons.Text = hResult!chr_forma_pago
        myButtons.Tag = hResult!id_forma_pago
        myButtons.Expand = True
        myButtons.Reparent(vBoxFormaPago)
    Next
    If modVariables.i_tipoCobro <> modVariables.COBRO_CANCELADO Then
        lblCbOrden.Text = modVariables.i_intOrdenID
        lblCbMesa.Text = modVariables.s_strMesaTemp
         
        flTemporal = sCalculaCosto(modVariables.i_intOrdenID) 
        lblCbTotal.Text = "$" & CStr(flTemporal[1])
        fTotal = CFloat(flTemporal[1])
  
        fPagosRecibidos = fChecaPagos(modVariables.i_intOrdenID)

        If fPagosRecibidos <= 0 Then fPagosRecibidos = fPagosRecibidos
        lblResta.Text = CStr(fPagosRecibidos - fTotal)

        If modVariables.i_intTipoPrecio = 3 Then 
            modVariables.i_tipoCobro = 3
        Endif
    
        If fPagosRecibidos >= fTotal Or iFormaPago = 3 Then 
            btnAddPago.Enabled = False
        Else 
            btnOK.Enabled = False
        Endif
    Else 
        btnAddPago.Enabled = False
        txtReferenciaPago.Text = "CANCELADA"
        txtReferenciaPago.Visible = True
        lblDescuento.Visible = False
        txtDescuento.Visible = False
        txtReferencia.Text = "CANCELADA"
    Endif
  
Catch
    Print Error.Text
    Message.Error(Error.Text & ", " & Error.Where)
End

Public Sub btnAddPago_Click()
    Dim hResult As Result
    Dim fToRegister As Float
    Dim sQuery As String

    fPagosRecibidos = fChecaPagos(modVariables.i_intOrdenID)
  
    If txtRecibido.Text <> "" Then
        fAcumPagosRecibidos = CFloat(txtRecibido.text) + fPagosRecibidos
        fRecibido = CFloat(txtRecibido.text)
    Endif
  
    If fRecibido >= 0 Then
        fPagosRecibidos += fRecibido
        If (fPagosRecibidos) >= fTotal Then 
            fCambio = (fPagosRecibidos) - fTotal
            fToRegister = CFloat(txtRecibido.text) - fCambio
        Else If (fPagosRecibidos) < fTotal
            If iFormaPago <> 3 Then
                fCambio = (fPagosRecibidos) - fTotal
                fToRegister = CFloat(txtRecibido.text)
            Else 
                fCambio = (fPagosRecibidos) - fTotal
                fToRegister = fTotal
            Endif
        Endif

        Select Case iFormaPago
            Case 1, modVariables.COBRO_NORMAL, modVariables.COBRO_TARJETA, 5
                If txtRecibido.Text <> "" Then
                    fRecibido = CFloat(txtRecibido.Text)
                    modVariables.c_Conn.Begin()
                    hResult = modVariables.c_Conn.Create("tbl_ordenes_cerradas")
                    hResult!id_orden_id = modVariables.i_intOrdenID
                    hResult!dt_horafecha_cierre_orden = Now()
                    hResult!fl_total = fToRegister
                    hResult!bool_factura = iMyBol
                    hResult!chr_referencia_notas = txtReferencia.Text
                    hResult!int_lvl_report = 1
                    hResult!id_ticket_IDNr = modVariables.i_intTicketNR
                    hResult!id_control_fecha = modVariables.i_idControlFecha
                    hResult!int_forma_pago = iFormaPago
                    hResult.Update()
                    modVariables.c_Conn.Commit()
                    hResult = Null
                  
                    Try iOrdenCerrada = modVariables.c_Conn.Exec("select last_insert_id() as last")["last"]
                    txtRecibido.Text = ""
                    fPagosRecibidos = fChecaPagos(modVariables.i_intOrdenID)
                    lblResta.Text = CStr(fCambio) & ".00"
                Endif
            Case modVariables.COBRO_CORTESIA, modVariables.COBRO_DESCUENTO
                lblResta.Text = "0.00"
                fCambio = fAcumPagosRecibidos - fTotal
                lblResta.Text = CStr(fCambio) & ".00"
                btnOK.Enabled = True
        End Select
    Else 
        Return 
    Endif   
    If fCambio > 0 Then 
        btnAddPago.Enabled = False
    Else If fCambio <= 0
        btnAddPago.Enabled = True
    Endif
  
    lblResta.Text = CString(fCambio) & ".00"
  
    If iFormaPago <> 3 Then
        If (fPagosRecibidos >= fTotal) Then 
            btnOK.Enabled = True
        Else 
            btnOK.Enabled = False
        Endif 
        If chkFactura.Value = False Then 
            If (Message.Question("El cliente desea Factura?", "Si, facturar", "No, no se factura") = 1) Then 
                chkFactura.Value = True
                iMyBol = 1
            Else 
                chkFactura.Value = False
                iMyBol = 0
            Endif
        Endif
        fPagosRecibidos = fChecaPagos(modVariables.i_intOrdenID)
        txtRecibido.Text = ""
    Else 
        Return
    Endif
  
    txtRecibido.Text = ""
End

