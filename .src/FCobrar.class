  'Dim rResultPromos As Result
  'Dim flTemporal As Float
  'Dim iInc As Integer
  
  Dim sArray As String[] = Split(File.Load("Templates/ticketventa-" & modVariables.sPrefijoDB & ".html"), gb.Newline, "", True)
  Dim sHTML As String
  
