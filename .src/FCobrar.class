                    btnAddPago.Enabled = False
                    btnOK.Enabled = True
                    modVariables.i_tipoCobro = modVariables.COBRO_CORTESIA
                    modVariables.i_intTipoPrecio = 3
                    sQuery = "id_orden = &1"
                    modVariables.c_Conn.Begin()
                    hResult = modVariables.c_Conn.Edit("tbl_precio_tipo_ordenes", sQuery, modVariables.i_intOrdenID)
                    hResult!id_orden = modVariables.i_intOrdenID
                    hResult!id_tipo_precio = modVariables.i_intTipoPrecio
                    hResult.Update()
                    modVariables.c_Conn.Commit()
                    hResult = Null
                Else 
                    Return 
                Endif 
            Case 4
                lblDescuento.Visible = False
                txtDescuento.Visible = False
                txtReferenciaPago.Text = "T. Deb/Cred"
                txtReferenciaPago.Visible = True
                txtRecibido.Enabled = True
                txtReferencia.Enabled = True
                lblReferencia.Text = "Ref. Operacion:"
                btnAddPago.Enabled = True
                txtReferencia.Text = ""
                txtReferencia.Placeholder = "Referencia"
                modVariables.i_tipoCobro = modVariables.COBRO_TARJETA
                btnOK.Enabled = True
                If fPagosRecibidos >= fTotal Then 
                    btnOK.Enabled = True
                Else 
                    btnOK.Enabled = False
                    Return 
                Endif
            Case 5
                lblDescuento.Visible = False
                txtDescuento.Visible = False
                txtReferenciaPago.Text = "Transferencia"
                txtReferenciaPago.Visible = True
                txtRecibido.Enabled = True
                txtReferencia.Enabled = True
                lblReferencia.Text = ""
                btnAddPago.Enabled = True
                txtReferencia.Text = ""
                txtReferencia.Placeholder = "Referencia"
                modVariables.i_tipoCobro = modVariables.COBRO_TARJETA
                modVariables.i_intTipoPrecio = 1
                If fPagosRecibidos >= fTotal Then 
                    btnOK.Enabled = True
                Else 
                    btnOK.Enabled = False
                    Return 
                Endif
            Default 
                Return
        End Select
        Print "Tipo Cobro: " & modVariables.i_tipoCobro
    Endif 
Catch
    Print Error.Text
End

Public Sub txtDescuento_LostFocus()
