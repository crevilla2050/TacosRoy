Public Sub Form_Open()

Dim sShellCmd, sFileName As String

  Inc Application.Busy
  
  sFileName = modVariables.cnfConfigFile["DB/File"]
  sShellCmd = "mysql --protocol=tcp --host=127.0.0.1 --user=root -pt4a2x0a6 --port=3306 --default-character-set=utf8 --comments --database=db_tacosroy_" & modVariables.sPrefijoDB & " < \"" & sFileName & "\""
  Shell sShellCmd Wait 
  
  Dec Application.Busy
  
  If Not Error Then 
    Message("Base de Datos actualizada con Ã©xito")
    modVariables.cnfConfigFile["DB/File"] = ""
    modVariables.cnfConfigFile["DB/LoadDb"] = "False"
  Else 
    Message.Error(Error.Text)
  Endif 
  
  Me.Close

Catch 
  Message.Error(Error.Text)

End
