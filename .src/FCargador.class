    sQuery &= " `tbl_ordenes_cerradas`.`id_orden_cerrada` as `ID ORC`, " '3b
    sQuery &= " `tbl_orcon`.`id_cons` as `ID Cons`, " '4b
    sQuery &= " `tbl_consecutivo`.`chr_consecutivo` as `Ticket`," '5b
