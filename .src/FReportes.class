Private rResult As Result

Public Sub Form_Open()

Dim sQueryString As String

  modVariables.$hConn = modConn.ConectarDB()
  
  sQueryString = "SELECT `id_orden_cerrada`, `id_orden_id`, `dt_horafecha_cierre_orden`, `fl_total` FROM `tbl_ordenes_cerradas` order by id_orden_cerrada"
  
  rResult = modVariables.$hConn.Exec(sQueryString)
  'gridReportIzq.Rows.Count = 0
  gridReportIzq.Rows.Count = rResult.Count

End

Public Sub gridReportIzq_Data(Row As Integer, Column As Integer)

  rResult.moveTo(Row)
  gridReportIzq.Data.text = Str(rResult[gridReportIzq.Columns[column].text])

End
