Private Function iGetIStartControlFecha(dtActual As Date) As Integer
  
  Dim dtDateMinusDays As Date = DateAdd(dtActual, gb.Day, -40)
  Dim sQuery As String
  Dim hResult As Result
  
  sQuery = "SELECT * FROM tbl_control_fechas where Year(dt_fecha_calendario) = &1 and Month(dt_fecha_calendario) = &2 and Day(dt_fecha_calendario) = &3 order by id_control_fechas desc limit 1"
  Try hResult = modVariables.c_Conn.Exec(sQuery, Year(dtDateMinusDays), Month(dtDateMinusDays), Day(dtDateMinusDays)) 
  If (hResult.Available = True) And (hResult <> Null) Then 
    'iStartControlFecha = CFloat(hResult[0])
    Return hResult[0]
  Else 
    Return iGetIStartControlFecha(dtActual - 1)
  Endif
  
End


