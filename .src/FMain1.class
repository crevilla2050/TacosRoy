Public Sub btnImrpimeCuenta_Click()
Dim sTempFile, sCommand As String

  Me.Enabled = False
  PrinterCuenta.PaperWidth = 80
  Inc Application.Busy
  sTempFile = User.Home &/ "Tickets/ticketOrden_" & modVariables.i_intTicketNR & "-" & Format(Now, "yyyy-mm-dd_hh:nn:ss") & ".pdf"
  'sTempFile = Subst(" ", )
  sTempFile = Replace(sTempFile, " ", "-")
  PrinterCuenta.OutputFile = sTempFile
  PrinterCuenta.Print()
  'imprimir archivo generado utilizando bash
  sCommand = "lp " & sTempFile 
  Shell sCommand Wait 
  
  Dec Application.Busy
  Me.Enabled = True

End

