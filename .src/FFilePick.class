' Gambas class file

Public Sub Run() As Boolean

  Return Not Me.ShowModal()

End

Public Sub btnOK_Click()
  
  If FileChooser1.Value = "" Then 
    Message.Error("Elija un archivo por favor")
  Else 
    modVariables.sFilePath = FileChooser1.Value
    Me.Close 
  Endif

End

Public Sub btnCancel_Click()
  
  Me.Close
End


Public Sub FileChooser1_Change()
  Label1.Text = FileChooser1.Value
End

