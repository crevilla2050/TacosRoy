  Endif  
  
  tempHTML &= "</body>"

  'Print tempHTML
  Return tempHTML

Catch 
  Print Error.Text
  Message.Error(Error.Text & ", " & Error.Where)

End

Public Sub gridReportIzq_Data(Row As Integer, Column As Integer)
  
  If (rsRecords <> Null) Then
    If Row >= 0 Then
      rsRecords.moveTo(Row)
      Try gridReportIzq.Data.Text = Str(rsRecords[Column])
    Endif
  Endif

Catch 
  
  Message.Error(Error.Text & ", " & Error.Where)
End

